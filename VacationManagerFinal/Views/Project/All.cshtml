@using VacationManager.Data.Models;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@model List<Project>

@if (Model.Count > 0)
{
    <h1>Projects</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.Name</td>
                    <td>@project.Description</td>
                    <td>
                        <a class="btn btn-primary me-3" asp-controller ="Project" asp-action="Edit" asp-route-id ="@project.ID">Edit</a>
                        <form method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Project" asp-route-id="@project.ID">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary mt-4 asp-controller="Project" asp-action="Add">Add Project</a>
}
else
{
    <h1 class="mt-3">No projects found.</h1>
    <a class="btn btn-primary mt-4 asp-controller="Project" asp-action="Add">Add Project</a>
}
