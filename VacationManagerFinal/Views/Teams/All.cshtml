@{
}

@model List<Team>

@if (Model.Count > 0)
{
    <h1>Teams</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Project</th>
                <th>Team Lead</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in Model)
            {
                <tr>
                    <td>@team.Name</td>
                    <td>@team.Project.ToString()</td>
                    <td>@team.TeamLead.ToString()</td>
                    <td>
                        <a class="btn btn-primary me-3" asp-action="Edit" asp-controller="Teams" asp-route-id="@team.ID">Edit</a>
                        <form method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Teams" asp-route-id="@team.ID">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary mt-4 asp-controller="Teams" asp-action="Add">Add Team</a>
}
else
{
    <h1 class="mt-3">No teams found.</h1>
    <a class="btn btn-primary mt-4 asp-controller="Teams" asp-action="Add">Add Team</a>
}
