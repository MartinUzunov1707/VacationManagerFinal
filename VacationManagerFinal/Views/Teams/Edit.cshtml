@using VacationManagerFinal.Data.ViewModels;
@{
}
@model TeamViewModel

<form method="post">
    <h1>Edit Team</h1>

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Project</label>
        <input type="text" class="form-control" asp-for="Project" />
    </div>

    <div class="mt-3">
        <label class="form-label">Username of team lead</label>
        <input type="text" class="form-control" asp-for="TeamLeadUserName" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>